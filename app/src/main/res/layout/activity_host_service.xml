<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/back"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".hostService">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPort"
        android:singleLine="true"
        android:hint="USER ID"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/startServer"
        android:layout_alignStart="@+id/startServer"
        android:layout_alignRight="@+id/startServer"
        android:layout_alignEnd="@+id/startServer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:singleLine="true"
        android:hint="HOTEL/LAWN NAME"
        android:layout_above="@+id/etPort"
        android:layout_alignRight="@+id/etPort"
        android:layout_alignEnd="@+id/etPort"
        android:layout_alignLeft="@+id/etPort"
        android:layout_alignStart="@+id/etPort" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/startServer"
        android:onClick="click"
        android:layout_below="@+id/etPort"
        android:layout_centerHorizontal="true" />

</RelativeLayout>